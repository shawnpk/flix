<section class="user">
  <h1><%= @user.name %></h1>

  <h2><%= mail_to(@user.email) %></h2>

  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
      <%= button_to 'Delete Account', @user, class: 'button delete', data: { turbo_confirm: 'Are you sure?' }, method: :delete %>
    </div>
  <% end %>

  <h3>Member since</h3>

  <p><%= @user.created_at.strftime('%B %Y') %></p>

  <% if @reviews.any? %>
    <h3>Reviews</h3>

    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
          <%= pluralize(review.stars, 'star') %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
          <p>
          <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</section>
